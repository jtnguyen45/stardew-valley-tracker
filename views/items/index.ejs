<%- include('../partials/header') %>

<h1><%= title %></h1>
<a href="/items/new"><button>Add Item</button></a>

<table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Where to Find</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(function(item) { %>
            <tr>
                <td><img src="/images/items/<%= item.image %>"></td>
                <td><a href="/items/<%= item._id %>"><%= item.name %></a></td>
                <td><%= item.desc %></td>
                <td><%= item.where %></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>