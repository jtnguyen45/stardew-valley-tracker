<%- include('../partials/header') %>

<div class="title-container">
    <h2><%= title %></h2>
</div>

<div id="new-item-container">
    <form id="new-item-form" action="/items" method="POST">
        <label>Item Name: </label>
        <input type="text" name="name">
        <label>Description: </label>
        <textarea name="desc"></textarea>
        <label>Where to find item (separate by comma if multiple): </label>
        <textarea name="where"></textarea>
        <label>Season </label>
        <select name="season">
            <option value="Spring">Spring</option>
            <option value="Summer">Summer</option>
            <option value="Fall">Fall</option>
            <option value="Winter">Winter</option>
            <option value="Any">Any</option>
        </select>
        <label>Image Name: </label>
        <input type="text" name="image">
        <br>
        <input id="add-item-btn" type="submit" value="Add Item">
    </form>
</div>


<%- include('../partials/footer') %>