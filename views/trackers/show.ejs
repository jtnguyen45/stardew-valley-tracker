<%- include('../partials/header') %>

<div class="title-container">
    <h2><%= title %></h2>
</div>

<div class="tracker-detail-container">
    <h3><%= tracker.name %></h3>
    <table>
        <thead>
            <tr>
                <th>Bundle</th>
                <th>Items Left</th>
                <th>Required Left</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% tracker.bundles.forEach(function(bundle) { %>
                <tr>
                    <th><img src="/images/bundles/<%= bundle.image %>"></th>
                    <th>
                        <% bundle.items.forEach(function(item) { %>
                            <% if (!bundle.trackedItems.includes(item._id)) { %>
                                <img src="/images/items/<%= item.image %>">
                            <% } %>
                        <% }); %>
                    </th>
                    <th><%= bundle.numReq %></th>
                    <!-- <th><a href="/trackers/<%= tracker._id %>/bundles/<%= bundle._id %>/edit">Edit</a></th> -->
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>